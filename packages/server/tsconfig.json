{
  "extends": "@dot-tools/tsconfig/default",
  "include": ["**/*.*js", "**/*.ts"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "paths": {
      "#~/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.dev.json"
    }
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
